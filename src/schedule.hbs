<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{{common.title}} - {{page.name}}</title>
</head>

<body>
    <div class="container-fluid">

        <header></header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="./index.html">
                <i class="far fa-calendar-alt"></i> {{common.title}}
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-burger-btn">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav-burger-btn">
                <ul class="navbar-nav mr-auto">
                    {{#each common.pages}}
                    <li class="nav-item {{this.active}}">
                        <a class="nav-link" href="{{this.link}}">{{this.title}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </nav>

        <nav>
            <ol class="breadcrumb navbar-righ">
                {{#each common.breadcrumb}}
                <li class="breadcrumb-item {{this.active}} {{#if @first}}ml-auto{{/if}}">
                    {{#unless this.active}}
                    <a href="{{this.link}}">
                        {{/unless}} {{this.title}} {{#unless this.active}}
                    </a>
                    {{/unless}}
                </li>
                {{/each}}
            </ol>
        </nav>

        <section>
            <h1 class="pt-2">
                <i class="fas fa-calendar-alt"></i> {{page.name}}
            </h1>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="table table-bordered schedule">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">
                                        <i class="fas fa-calendar-alt"></i>
                                    </th>
                                    {{#each page.headers}}
                                    <th>{{this}}</th>
                                    {{/each}}
                                </tr>
                            </thead>
                            <tbody>
                                {{#each page.content as |timeline|}}
                                <tr>
                                    {{#each timeline as |item|}}
                                    <td>{{item}}</td>
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <aside></aside>

        <footer class="footer">{{common.footer}}</footer>
    </div>

</body>

</html>