<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{{common.title}} - {{page.name}}</title>
</head>

<body>
    <div class="container-fluid">

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="./index.html">
                <i class="far fa-calendar-alt"></i> {{common.title}}
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-burger-btn">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav-burger-btn">
                <ul class="navbar-nav mr-auto">
                    {{#each common.pages}}
                    <li class="nav-item {{this.active}}">
                        <a class="nav-link" href="{{this.link}}">{{this.title}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </nav>

        <nav>
            <ol class="breadcrumb navbar-righ">
                {{#each common.breadcrumb}}
                <li class="breadcrumb-item {{this.active}} {{#if @first}}ml-auto{{/if}}">
                    {{#unless this.active}}
                    <a href="{{this.link}}">
                        {{/unless}} {{this.title}} {{#unless this.active}}
                    </a>
                    {{/unless}}
                </li>
                {{/each}}
            </ol>
        </nav>

        <section>
            <div class="row">
                <div class="col-lg-4">
                    <form class="form-inline">
                        <h1 class="pt-2">
                            <i class="fas fa-file-signature"></i> {{page.name}} 
                        </h1>
                        <div class="ml-xl-auto input-group">
                            <input type="text" class="form-control" placeholder="Seach rooms">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search pt-1"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="pt-2 pt-md-0">
                        {{#grouped_each 4 page.content.rooms}}
                        <div class="row">
                            {{#each this}}
                            <div class="col-lg-6 col-md-3 col-sm-6 pb-2">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.name}}</h5>
                                        <a href="./schedule.html" class="card-link">See schedule</a>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{/grouped_each}}
                    </div>
                    <div class="row pl-3 mb-3">
                        <a href="#">See 5 more rooms</a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <h3 class="pt-3">
                        <i class="fas fa-calendar-alt"></i> Today schedule
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">
                                        <i class="fas fa-file-signature"></i>
                                    </th>
                                    {{#each page.content.scheduleTimes}}
                                    <th>{{this}}</th>
                                    {{/each}}
                                </tr>
                            </thead>
                            <tbody>
                                {{#each page.content.schedule as |timeline|}}
                                <tr>
                                    {{#each timeline as |item|}}
                                    <td>{{item}}</td>
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <footer class="footer">{{common.footer}}</footer>
    </div>

</body>

</html>